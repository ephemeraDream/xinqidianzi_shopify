{{ 'section-hot-selling.css' | asset_url | stylesheet_tag }}

<div id="section-{{ section.id }}" class="hot-selling">
  <h2 class="hot-selling-heading">
    {{ section.settings.heading }}
  </h2>

  <div class="swiper carousel-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide carousel-item {% if forloop.first %}active{% endif %}" id="item-{{ block.id }}">
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="carousel-image">
          <div class="carousel-text">
            <h2>{{ block.settings.title }}</h2>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>

    <div class="carousel-navigation">
      {% for block in section.blocks %}
        <button class="category-btn" data-target="#item-{{ block.id }}">{{ block.settings.title }}</button>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "hot selling",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "heading"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "product",
          "id": "product",
          "label": "choose product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "hot selling",
      "blocks": [
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
