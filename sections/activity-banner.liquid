{{ 'section-activity-banner.css' | asset_url | stylesheet_tag }}

<div id="Banner-{{ section.id }}" class="activity-banner">
  {% if section.settings.image != blank %}
    <img
      src="{{ section.settings.image | image_url }}"
      alt="activity banner"
      width="100%"
      height="100%"
      class="activity-banner-bg"
    >
  {% endif %}
  <div class="activity-banner-box">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <div>
            <div class="activity-banner-box-heading">
              <h2>
                {{ block.settings.heading }}
              </h2>
              {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | image_url }}"
                  alt="icon-arrow-righ"
                  class="activity-banner-box-heading-icon"
                >
                <img
                  src="{{ block.settings.icon | image_url }}"
                  alt="icon-arrow-righ"
                  class="activity-banner-box-heading-icon"
                >
                <img
                  src="{{ block.settings.icon | image_url }}"
                  alt="icon-arrow-righ"
                  class="activity-banner-box-heading-icon"
                >
                <img
                  src="{{ block.settings.icon | image_url }}"
                  alt="icon-arrow-righ"
                  class="activity-banner-box-heading-icon"
                >
              {% endif %}
            </div>
            <div class="activity-banner-box-text">
              {{ block.settings.text }}
            </div>
          </div>
        {%- when 'buttons' -%}
          {%- if block.settings.button_label != blank -%}
            <div class="activity-banner-box-button">
              <a href="{{ block.settings.button_link }}">
                {{- block.settings.button_label | escape -}}
              </a>
            </div>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "activity banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "home banner heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "home banner heading"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "home banner heading icon"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "home banner text"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "home banner button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "activity banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
