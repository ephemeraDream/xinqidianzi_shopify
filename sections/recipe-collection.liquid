{{ 'section-recipe-collection.css' | asset_url | stylesheet_tag }}

<div id="section-{{ section.id }}" class="recipe-collection">
  <div class="recipe-collection-left">
    <div class="recipe-collection-left_head">Are You Looking for</div>
  </div>
  <div class="recipe-collection-right">1</div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    border-radius: 6rem 6rem 0px 0px;
    position: relative;
    z-index: 1;
    background: #fff;
  }
</style>

{% schema %}
{
  "name": "recipe collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "blogs",
      "name": "Blogs",
      "settings": [
        {
          "type": "blog",
          "label": "Select blogs",
          "id": "blog_handle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "recipe collection",
      "blocks": [{ "type": "blogs" }]
    }
  ]
}
{% endschema %}
