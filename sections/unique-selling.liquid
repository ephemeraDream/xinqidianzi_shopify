{{ 'section-unique-selling.css' | asset_url | stylesheet_tag }}

<div id="section-{{ section.id }}" class="unique-selling">
  <h2 class="unique-selling-heading">
    {{ section.settings.heading }}
  </h2>
  <p class="unique-selling-text">{{ section.settings.text }}</p>

  <div class="unique-selling-contain">
    <div class="left-side">
      <img
        src="{{ section.settings.image | image_url }}"
        alt="unique selling"
        width="100%"
        height="100%"
        class="left-side-bg"
      >
      {% for block in section.blocks %}
        <div class="left-side-dot" data-product-id="{{ block.settings.product_id }}">
          {{- 'circle.svg' | inline_asset_content -}}
        </div>
      {% endfor %}
    </div>

    <div class="right-side">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide" data-product-id="{{ block.settings.product_id }}">
              <img src="{{ block.settings.image | img_url: 'medium' }}" alt="Product Image">
              <h3>{{ block.settings.product_name }}</h3>
              <p>{{ block.settings.product_description }}</p>
            </div>
          {% endfor %}
        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "unique selling",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "heading"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "text"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "choose product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "unique selling",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
