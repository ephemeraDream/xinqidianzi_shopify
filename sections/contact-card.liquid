{{ 'section-contact-card.css' | asset_url | stylesheet_tag }}

<div id="section-{{ section.id }}" class="contact-card padding-sider">
  <img
    src="{{ section.settings.image | image_url }}"
    alt="contact card"
    class="contact-card-left"
  >
  <div class="contact-card-right">
    <h2 class="contact-card-heading">
      {{ section.settings.heading }}
    </h2>
    <div class="contact-card-text">{{ section.settings.text }}</div>
    <div class="contact-card-line"></div>
    {% for block in section.blocks %}
      <div class="contact-box">
        <img
          src="{{ block.settings.icon | image_url }}"
          alt="contact icon"
        >
        <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "contact card",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "heading"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "text"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "contact",
      "name": "contact",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "contact card",
      "blocks": [
        {
          "type": "contact"
        }
      ]
    }
  ]
}
{% endschema %}
