{{ 'section-home-banner.css' | asset_url | stylesheet_tag }}

<div id="Banner-{{ section.id }}" class="home-banner">
  {% if section.settings.image != blank %}
    <img
      src="{{ section.settings.image | image_url }}"
      alt="home banner"
      width="100%"
      height="100%"
      class="home-banner-bg">
  {% endif %}
  <div class="home-banner-box">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <div class="home-banner-box-heading">
            <h2>
              {{ block.settings.heading }}
            </h2>
            {% if block.settings.icon != blank %}
              <img
                src={{ block.settings.icon | image_url }}
                alt="icon-arrow-righ"
                class="home-banner-box-heading-icon">
              <img
                src={{ block.settings.icon | image_url }}
                alt="icon-arrow-righ"
                class="home-banner-box-heading-icon">
              <img
                src={{ block.settings.icon | image_url }}
                alt="icon-arrow-righ"
                class="home-banner-box-heading-icon">
              <img
                src={{ block.settings.icon | image_url }}
                alt="icon-arrow-righ"
                class="home-banner-box-heading-icon">
            {% endif %}
          </div>
        {%- when 'text' -%}
          <div class="home-banner-box-text">
            {{ block.settings.text }}
          </div>
        {%- when 'buttons' -%}
          <div class="home-banner-box-button">
            {%- if block.settings.button_label != blank -%}
              <a
                {% if block.settings.button_link == blank %}
                role="link"
                aria-disabled="true"
                {% else %}
                href="{{ block.settings.button_link }}"
                {% endif %}>
                {{- block.settings.button_label | escape -}}
              </a>
            {%- endif -%}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>
{% schema %}
  {
    "name": "Home banner",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "home banner heading",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "label": "home banner heading"
          }
        ]
      }, {
        "type": "image",
        "name": "home banner heading icon",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "home banner heading icon"
          }
        ]
      }, {
        "type": "text",
        "name": "home banner text",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "text",
            "label": "home banner text"
          }
        ]
      }, {
        "type": "buttons",
        "name": "home banner button",
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "label": "button label"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home banner",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "image"
          }, {
            "type": "text"
          }, {
            "type": "buttons"
          }
        ]
      }
    ]
  }
{% endschema %}