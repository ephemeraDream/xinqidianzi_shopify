{{ 'section-product-icontext.css' | asset_url | stylesheet_tag }}

<div id="section-{{ section.id }}" class="product-icontext">
  <h2 class="product-icontext-heading">{{ section.settings.heading }}</h2>
  <div class="product-icontext-text">{{ section.settings.text }}</div>
  <div class="product-icontext-contain">
    {% for block in section.blocks %}
      <div class="product-icontext-box">
        {{ block.settings.icon }}
        <div>{{ block.settings.text }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "product icontext",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "text"
    }
  ],
  "blocks": [
    {
      "type": "iconbox",
      "name": "Icon Box",
      "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "product icontext"
    }
  ]
}
{% endschema %}
